#include <stdio.h>

int main()
{
    int n1, n2;
    float f;
    
    printf("Digite a nota da 1ª prova: ");
    scanf("%d", &n1);
    
    printf("Digite a nota da 2ª prova: ");
    scanf("%d", &n2);
    
    f = (n1+n2)/2;
    
    if (f >= 6){
        printf("Aprovado - com nota %.2f",f);
    }else{
        printf("Reprovado - com nota %.2f",f);
    }
    

    return 0;
}
